@model IEnumerable<BoatsCrudy.Models.Entities.Trip>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Boat.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartingPort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DestinationPort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedPassengers)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Boat.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartingPort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationPort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookedPassengers)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
